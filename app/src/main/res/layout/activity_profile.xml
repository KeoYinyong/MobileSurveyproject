<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Profile Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/img" />
        </RelativeLayout>

        <!-- Display Name -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="loading"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Information Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:padding="15dp">

            <!-- Name -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/img" />

            <EditText
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:hint="loading"
                android:minHeight="48dp"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_name"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <!-- Email -->
            <ImageView
                android:id="@+id/email"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@mipmap/sms" />

            <EditText
                android:id="@+id/textview_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="loading"
                android:minHeight="48dp"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_email"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <!-- Password -->
            <ImageView
                android:id="@+id/password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/divider_email"
                android:layout_marginTop="20dp"
                android:background="@mipmap/pass" />

            <EditText
                android:id="@+id/textview_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="loading"
                android:minHeight="48dp"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textview_password"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <!-- Buttons for Updating Information and Deleting Account -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_password"
                android:layout_marginTop="20dp"
                android:onClick="updateUserProfile"
                android:text="Update Information"
                android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_update_information"
                android:layout_marginTop="20dp"
                android:onClick="deleteUserAccount"
                android:text="Delete Account"
                android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <!-- Progress Bar (Optional) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
